@model IEnumerable<Onlinevotingsystem.Models.ElectionVotes>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align:center">View Election Votes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table blur">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ElectionId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CandidateId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ElectionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CandidateId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ElectionVoteId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ElectionVoteId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ElectionVoteId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
